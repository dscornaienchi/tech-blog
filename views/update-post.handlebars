<head>
  <title>Update Post</title>
</head>


  <h1>Update Post</h1>
  <form id="update-post-form">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="title" required value="{{post.title}}">
    </div>
    <div class="form-group">
      <label for="post-content">Content</label>
      <textarea id="post-content" name="content" required>{{post.content}}</textarea>
    </div>
    <button type="submit">Update Post</button>
    <button id="deletepost">Delete Post</button>
  </form>

    <script src="/assets/js/update-post.js"></script> 
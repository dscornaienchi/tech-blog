
{{#each posts}}
<div class="container">
  <div class="post-card">
    <h2><a href="/comment/{{id}}">{{title}}</a></h2>
    <p>{{content}}</p>
    <p>Author: {{user.username}}</p>
    <p>Date: {{createdAt}}</p>
    <!-- Check if comments exist for the post -->
    {{#if comments.length}}
      <div class="comments-container">
        {{#each comments}}
          <div class="comment">
            <p>{{content}}</p>
            <p>Author: {{user.username}}</p>
            <p>Date: {{createdAt}}</p>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>
{{/each}}



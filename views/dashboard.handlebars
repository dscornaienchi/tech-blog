{{#if user}}
<div class="container">
  <ul>
    {{#each posts}}
    <div class="post-card">
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <p>Author: {{user.username}}</p>
      <p>Date: {{createdAt}}</p>
      <button class="btn btn-danger delete-post" data-id="{{id}}" method="DELETE" action="/delete/{{id}}">Delete Post</button>
      <button class="btn btn-primary update-post" data-id="{{id}}" method="GET" action="/update/{{id}}">Update Post</button>
    </div>
    {{/each}}
  </ul>
</div>

<h3>Create a New Post</h3>
<form id="create-post-form" method="POST" action="/create">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" id="post-title" name="title" required>
  </div>
  <div class="form-group">
    <label for="post-content">Content</label>
    <textarea id="post-content" name="content" required></textarea>
  </div>
  <button type="submit" href="/create">Create Post</button>
</form>
{{else}}
<p>Please <a href="/login">log in</a> to view your dashboard.</p>
{{/if}}



